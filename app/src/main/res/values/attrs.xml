<resources>
    <declare-styleable name="FullscreenAttrs">
        <attr name="fullscreenBackgroundColor" format="color" />
        <attr name="fullscreenTextColor" format="color" />

    </declare-styleable>

    <declare-styleable name="CircularProgressStepper">
        <attr name="cps_numOfSteps" format="integer|reference"/>
        <attr name="cps_currentStep" format="integer|reference"/>
        <attr name="cps_stepsSize" format="dimension|reference"/>
        <attr name="cps_foregroundColor" format="color|reference"/>
        <attr name="cps_progressColor" format="color|reference"/>
        <attr name="cps_progressStrokeOffset" format="dimension|reference"/>
        <attr name="cps_stepsDrawableSrc" format="reference"/>
    </declare-styleable>
</resources>